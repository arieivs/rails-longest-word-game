<div class="container">
  <h1>New game</h1>
  <div class="letters">
    <% @grid.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>
  <div>
    <p>What's the longest word you can find?</p>
    <form action="/score" method="post">
      <input type="text" name="word" placeholder="Type the longest word" class="type-word">
      <input type="submit" value="Play" class="button">
      <%= hidden_field_tag :grid, @grid %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>
</div>
